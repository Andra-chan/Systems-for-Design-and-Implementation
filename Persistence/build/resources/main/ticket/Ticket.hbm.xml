<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ticket">
<class name="project.model.Ticket"
       table="Tickets">
    <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property
                name="name"
                column="name"/>
        <property
                name="tourists"
                column="tourists"/>
        <property
                name="address"
                column="address"/>
        <property
                name="seats"
                column="seats"/>

    </class>
</hibernate-mapping>